rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is superuser
    function isSuperuser() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.token.email)) &&
        get(/databases/$(database)/documents/users/$(request.auth.token.email)).data.isSuperuser == true;
    }
    
    // Helper function to check if user is whitelisted
    function isWhitelisted() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.token.email)) &&
        (get(/databases/$(database)/documents/users/$(request.auth.token.email)).data.isWhitelisted == true ||
         get(/databases/$(database)/documents/users/$(request.auth.token.email)).data.allowed == true);
    }
    
    // Users collection - authenticated users can read their own doc, admins can write
    match /users/{email} {
      allow read: if request.auth != null;
      allow create: if isSuperuser();
      allow update: if isSuperuser() || request.auth.token.email == email;
      allow delete: if isSuperuser();
    }
    
    // Questions - authenticated users can read, only admins can write
    match /questions/{document=**} {
      allow read: if request.auth != null && isWhitelisted();
      allow write: if isSuperuser();
    }
    
    // GG Questions (HireLearn Questions) - authenticated users can read, only admins can write
    match /gg-questions/{document=**} {
      allow read: if request.auth != null && isWhitelisted();
      allow write: if isSuperuser();
    }
    
    // Submissions - authenticated users can read and create, only admins can update/delete
    match /submissions/{document=**} {
      allow read: if request.auth != null && isWhitelisted();
      allow create: if request.auth != null && isWhitelisted();
      allow update, delete: if isSuperuser();
    }
    
    // Content collection - authenticated users can read, only admins can write
    match /content/{document=**} {
      allow read: if request.auth != null && isWhitelisted();
      allow write: if isSuperuser();
    }
  }
}